---
interface Props {
  title: string;
  value: number;
  color: string;
}
const { title, value, color } = Astro.props;
---

<li class="md:basis-[45%] basis-[80%]">
  <h3 class="truncate">{title}</h3>
  <div class="skill-shadow">
    <div
      class="skill-bar"
      style=`
                  width: ${value}%;
                  background-color: ${color};
                  box-shadow: 5px 0px 5px ${color};
                `
    >
      <span class="value">{value}%</span>
    </div>
  </div>
</li>

<style>
  li {
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 0.5rem;
  }

  li .skill-shadow {
    background-color: rgba(102, 102, 102, 0.2);
    border-radius: 1rem;
    width: 100%;
  }

  li .skill-bar {
    background-color: var(--secondary-color);
    border-radius: 1rem;
    padding: 1rem;
    font-style: italic;
    color: #fff7fa;
    text-shadow: 1px 1px 2px darkslategray;
    min-width: 6ch;
  }
</style>
