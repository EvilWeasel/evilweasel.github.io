---
import { Icon } from "astro-icon/components";
import ThemeToggle from "./theme-toggle.astro";
---

<nav class="flex flex-col justify-center">
  <div class="flex flex-col items-center">
    <div class="py-5">
      <img class="rounded-[50%] shadow-lg grayscale" src="/me.png" alt="PB" />
    </div>
    <div class="mb-6">
      <ThemeToggle />
    </div>
    <div class="w-full">
      <h3 class="m-0">Externe Links</h3>
      <ul>
        <li>
          <a href="https://evilweasel.github.io/docs">Meine Dokumente</a>
        </li>
      </ul>
    </div>
    <div class="w-full">
      <h3 class="m-0">On This Page</h3>
      <ul>
        <li>
          <a href="/#hero">Home</a>
        </li>
        <li>
          <a href="/#skills">Skills</a>
        </li>
        <li>
          <a href="/#timeline">Lebenslauf</a>
        </li>
        <li>
          <a href="/#projects">Projekte</a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<style>
  nav {
    position: sticky;
    top: 0;
    bottom: 0;
    height: 100vh;
  }

  nav > div {
    overflow-y: scroll;
    scrollbar-width: none;
  }

  ul li {
    margin: 0.5rem 0;
    border-radius: 1rem;
  }
  ul li:hover {
    @apply bg-slate-400;
  }
  ul li:hover a {
    font-variation-settings:
      "wght" 800,
      "wdth" 105,
      "slnt" -6;
  }
  html.dark ul li:hover {
    @apply bg-slate-800;
  }
  ul li a {
    padding: 1rem;
    display: block;
    width: 100%;
    height: 100%;
    font-variation-settings:
      "wght" 400,
      "wdth" 100,
      "slnt" 0;
    transition: all 0.5s ease;
    margin: 0 auto;
  }
</style>
