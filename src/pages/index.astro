  section {
    min-height: 100vh;
    background-size: cover;
    padding-top: 1rem;
    padding-inline: 2rem;
    justify-content: center;
  }

  section.skills {
    display: flex;
    flex-direction: column;
    gap: 2rem;
    justify-content: center;
    align-items: center;
  }

  section.skills > ul {
    width: 100%;
    display: flex;
    flex-direction: row;
    flex-wrap: wrap;
    justify-content: space-around;
    gap: 1rem;
    list-style: none;
    padding: 0;
  }

  section.skills > ul > li {
    width: 40%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    gap: 0.5rem;
  }

  section.skills > ul > li .skill-shadow {
    background-color: rgba(102, 102, 102, 0.2);
    border-radius: 1rem;
    width: 100%;
  }

  section.skills > ul li .skill-bar {
    background-color: var(--secondary-color);
    border-radius: 1rem;
    padding: 1rem;
    width: 100%;
    font-style: italic;
    color: #fff7fa;
    text-shadow: 1px 1px 2px darkslategray;
  }

  section.skills > ul li .skill-bar > span.value::after {
    content: " %";
    font-size: 1.1em;
  }

  section.timeline {
    font-size: 0.8em;
    padding: 2rem;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
    overflow-y: scroll;
  }

  .timeline-items {
    max-width: 1300px;
    margin: auto;
    display: flex;
    flex-wrap: wrap;
    position: relative;
  }

  .timeline-items::before {
    content: "";
    position: absolute;
    width: 5px;
    height: 100%;
    background-color: var(--primary-color);
    left: calc(50%);
    list-style: none;
  }

  .timeline-item {
    margin-bottom: 10px;
    width: 100%;
    position: relative;
    transform: scale(0.8);
    list-style: none;
  }

  .timeline-item:last-child {
    margin-bottom: 0;
  }

  .timeline-item:nth-child(odd) {
    padding-right: calc(50% + 30px);
    text-align: right;
  }

  .timeline-item:nth-child(even) {
    padding-left: calc(50% + 30px);
  }

  .timeline-dot {
    left: calc(50% - 9px);
    top: 10px;
    position: absolute;
    height: 24px;
    width: 24px;
    background-color: var(--primary-color);
    border-radius: 50%;
    box-shadow:
      0 0 25px var(--primary-color),
      0 0 50px var(--primary-color);
  }

  .timeline-date {
    font-size: 20px;
    font-weight: 800;
    color: white;
    margin: 6px 10px 40px 0;
  }

  .timeline-content {
    background-color: var(--background-color);
    border: 3px solid var(--primary-color);
    padding: 30px 50px;
    border-radius: 4rem;
    box-shadow: 0 0 10px var(--primary-color);
    cursor: pointer;
    transition: all 0.3s ease;
    margin-top: 10px;
  }

  .timeline-content:hover {
    box-shadow: 0 0 25px var(--primary-color);
    transform: scale(1.05);
  }

  .timeline-content h3 {
    font-size: 20px;
    font-weight: 700;
    color: white;
    margin: 0 0 10px 0;
  }

  .timeline-content p {
    font-size: 16px;
    font-weight: 300;
    color: white;
    margin: 0;
  }

  section.project-cards {
    height: fit-content;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    justify-content: center;
    align-items: center;
  }

  section.project-cards ul {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    width: 100%;
    list-style: none;
    gap: 2rem;
    padding: 0;
    justify-content: center;
    align-items: center;
    place-items: center;
  }

  section.project-cards ul li {
    background-color: var(--primary-color);
    border-radius: 15px;
    box-shadow: 4px 4px 10px var(--primary-color);
    max-width: 400px;
  }

  section.project-cards ul li:hover {
    transform: translateY(-1rem) translateX(0.2rem);
    box-shadow: 4px 4px 10px var(--secondary-color);
  }

  section.project-cards ul li img {
    width: 100%;
    border-radius: 15px 15px 0 0;
  }

  section.project-cards ul li *:not(img) {
    margin-inline: 1rem;
  }

  section.project-cards ul li :last-child {
    margin-bottom: 1rem;
    border-radius: 15px;
    padding: 1rem;
    background-color: rgba(255, 19, 137, 0.8);
    font-weight: 700;
    font-size: 1em;
  }

  section.project-cards ul li :last-child:hover {
    background-color: rgba(255, 19, 137, 1);
  }

  /* Media */

  @media screen and (max-width: 1100px) {
    main > section.hero#hero {
      grid-template-columns: 0.5fr 1fr;
    }
    section.hero .hero-text {
      font-size: 1em;
    }
    section.hero .hero-text p {
      width: 30ch;
    }
    .hero img {
      max-width: 300px;
    }
  }
  @media screen and (max-width: 840px) {
    section.hero .hero-text {
      font-size: 0.9em;
    }
    section.hero .hero-text h1 {
      font-size: 2.5em;
    }
    section.hero .hero-text h2 {
      font-size: 1.5em;
    }
    section.hero .hero-text p {
      width: 25ch;
    }
    section.hero img {
      max-width: 100%;
    }

    section.project-cards ul {
      display: flex;
      flex-direction: row;
      flex-wrap: wrap;
      gap: 1rem;
    }
    section.project-cards ul li {
      width: 300px;
    }
  }
</style>
